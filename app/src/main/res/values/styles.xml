<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#008cff</item>
        <item name="colorPrimaryDark">#008cff</item>
        <item name="colorAccent">#00BCD4</item>

        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="NoActionBar.NoStatusBar" parent="NoActionBar">
        <item name="colorPrimary">#008cff</item>
        <item name="colorPrimaryDark">#008cff</item>
        <item name="colorAccent">#00BCD4</item>

        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <!--        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>-->

        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.StatusBarTransparent">
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="FloatingActionButton" parent="Theme.MaterialComponents.DayNight"></style>

    <style name="OneUI.Dialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/OneUI.Dialog.BottomSheetStyle</item>
    </style>

    <style name="OneUI.Dialog.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="TextView.Badge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/bg_badge_red</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="OneUI.VerticalRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/radio_button</item>
        <item name="android:buttonTint">@color/colorTextButton</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>

        <item name="colorAccent">@color/colorTextButton</item>
        <item name="colorControlHighlight">@color/colorTextButton</item>
        <item name="android:colorPressedHighlight">@color/colorTextButton</item>
        <item name="colorPrimaryDark">@color/colorTextButton</item>
        <item name="colorPrimary">@color/colorTextButton</item>
        <item name="colorControlActivated">@color/colorTextButton</item>
    </style>

    <style name="OneUI.HorizontalRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!--        <item name="android:buttonTint">@color/colorTextButton</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextView.LongBadge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_badge_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Button.FlatButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#008cff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_flat</item>
    </style>

    <style name="Button.FlatButtonBorder" parent="Button.FlatButton">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_flat_with_border</item>
    </style>

    <style name="ImageButton.FlatIconButton" parent="Button.FlatButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:tint">@color/colorText</item>
        <item name="android:paddingStart">22dp</item>
    </style>

    <style name="Button.RaisedButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_raised</item>
    </style>

    <style name="OneUI.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">50dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/colorText</item>
        <item name="tabIndicatorHeight">40dp</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/OneUI.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorText</item>
    </style>

    <style name="OneUI.TabLayout.BottomNavigation" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">50dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="tabIndicator">@drawable/indicator_bottom_navigation</item>
        <item name="tabIndicatorColor">@color/colorTextButton</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">20dp</item>
        <item name="tabMode">auto</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/OneUI.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTextButton</item>
    </style>

    <style name="OneUI.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OneUI.ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/bg_radius_full_white_with_border</item>
    </style>

    <style name="OneUI.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@drawable/bg_switch</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListItem.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
