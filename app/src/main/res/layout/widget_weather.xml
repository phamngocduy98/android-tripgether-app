<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_curr_temp_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:text="20°C"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_condition_widget_weather"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_weather_partly_cloudy" />

    <TextView
        android:id="@+id/tv_min_max_temp_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20°C - 30°C"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_curr_temp_widget_weather"
        app:layout_constraintTop_toBottomOf="@+id/tv_curr_temp_widget_weather" />

    <TextView
        android:id="@+id/tv_condition_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-light"
        android:text="Sunny"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/iv_condition_widget_weather"
        app:layout_constraintTop_toTopOf="@+id/iv_condition_widget_weather" />

    <TextView
        android:id="@+id/tv_location_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:drawableStart="@drawable/ic_near_me_black_14dp"
        android:drawableTint="@color/colorTextSecondary"
        android:text="Đại học quốc gia Hà Nội"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_condition_widget_weather"
        app:layout_constraintTop_toBottomOf="@+id/iv_condition_widget_weather" />

    <TextView
        android:id="@+id/tv_rain_precipitation_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rain 0mm"
        app:layout_constraintStart_toStartOf="@+id/tv_condition_widget_weather"
        app:layout_constraintTop_toBottomOf="@+id/tv_condition_widget_weather" />

    <TextView
        android:id="@+id/tv_last_update_time_widget_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_near_me_black_14dp"
        android:drawableTint="@color/colorTextSecondary"
        android:text="12:11"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_location_widget_weather"
        app:layout_constraintStart_toEndOf="@+id/tv_location_widget_weather"
        app:layout_constraintTop_toTopOf="@+id/tv_location_widget_weather"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>