<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    tools:context=".BottomNavigationFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottom_navigation"
        style="@style/OneUI.TabLayout.BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:elevation="5dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabUnboundedRipple="false">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bản đồ" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyến đi" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhật ký" />
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>