<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <View
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_radius_full_white_with_border"
        app:layout_constraintBottom_toTopOf="@+id/btn_share_activity_create_trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_qr_code_activity_create_trip"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_code_activity_create_trip"
        app:layout_constraintEnd_toEndOf="@+id/tv_code_activity_create_trip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_code_activity_create_trip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_code_activity_create_trip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="1234.5678"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_share_activity_create_trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_share_activity_create_trip"
        app:layout_constraintTop_toBottomOf="@+id/img_qr_code_activity_create_trip" />

    <Button
        android:id="@+id/btn_share_activity_create_trip"
        style="@style/Button.FlatButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chia sẻ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_finish_activity_create_trip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_finish_activity_create_trip"
        style="@style/Button.RaisedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hoàn thành"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_share_activity_create_trip" />

</androidx.constraintlayout.widget.ConstraintLayout>