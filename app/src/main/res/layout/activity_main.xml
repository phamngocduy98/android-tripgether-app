<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/frag_map"
        android:name="cf.bautroixa.maptest.TabMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </fragment>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/bot_nav_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_status_bar_activity_main" />

    <View
        android:id="@+id/view_status_bar_activity_main"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottom_navigation"
        style="@style/OneUI.TabLayout.BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:elevation="5dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabUnboundedRipple="false">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bản đồ" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyến đi" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhật ký" />
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

