<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radius_full_white_fill_bot"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="8dp"
    tools:context=".ui.bottomspace.BottomMembersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_avatar_item_member"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bg_radius_full_white"
            app:srcCompat="@drawable/no_avatar_image" />

        <TextView
            android:id="@+id/tv_name_bottom_item_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:lines="1"
            android:text="eYour name"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/img_checked_in_item_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/ic_ticker"
            android:tooltipText="Đã điểm danh" />

        <cf.bautroixa.ui.RoundedImageView
            android:id="@+id/img_sos_item_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/ic_help"
            android:tint="@color/colorText"
            android:tooltipText="Cần hỗ trợ"
            app:borderRadius="12dp" />

        <include layout="@layout/item_battery_percent_circle" />

        <ImageView
            android:id="@+id/img_moving_item_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/ic_directions_bike_black_24dp"
            android:tint="@color/colorText"
            android:tooltipText="Đang di chuyển trên đường" />

        <ImageView
            android:id="@+id/img_inaccurate_location_item_member"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/ic_no_gps"
            android:tint="@color/colorText"
            android:tooltipText="Vị trí không chính xác" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@color/colorBorder" />

    <LinearLayout
        android:id="@+id/linear_sos_message_item_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cf.bautroixa.ui.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_help"
            android:tint="@color/colorText"
            app:borderRadius="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/tv_sos_message_item_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="eĐang bị kẹt xe"
                android:textColor="@color/colorTextSecondary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@color/colorBorder" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_location_item_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_location_item_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_place_black_24dp"
            android:tint="@color/colorText" />

        <TextView
            android:id="@+id/tv_location_item_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTint="@color/colorText"
            android:maxLines="2"
            android:paddingVertical="2dp"
            android:text="eNear Bau Troi Xa Studio, Ha Noi, Viet Nam\n Duy pro asdasdasd as asd asd ad ad asd asd a"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@color/colorBorder" />

    <LinearLayout
        android:id="@+id/btns_container_frag_bottom_members"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_call_frag_friend"
            style="@style/ImageButton.FlatIconButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_phone_app"
            android:tint="@null" />

        <ImageButton
            android:id="@+id/btn_message_frag_friend"
            style="@style/ImageButton.FlatIconButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_message_app"
            android:tint="@null" />

        <Button
            android:id="@+id/btn_direction_frag_friend"
            style="@style/Button.FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="Chỉ đường" />
    </LinearLayout>
</LinearLayout>