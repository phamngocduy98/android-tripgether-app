<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_activity_main"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_status_bar_activity_main"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/container_toolbar_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_less_radius_full_white_with_border"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_trip_name_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Trip to Gether"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sos_activity_main"
            style="@style/Button.FlatIconButton"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:drawableStart="@drawable/ic_sos_red_24dp" />

        <Button
            android:id="@+id/btn_qr_code_activity_main"
            style="@style/Button.FlatIconButton"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:drawableStart="@drawable/ic_qr_code_black_24dp" />

        <cf.bautroixa.maptest.theme.RoundedImageView
            android:id="@+id/img_avatar_activity_main"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            app:borderRadius="50dp"
            app:srcCompat="@drawable/user" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title_toolbar_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tripgether"
        android:alpha="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>