<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bg_item_room">

    <cf.bautroixa.maptest.theme.RoundedImageView
        android:id="@+id/img_avatar_status_item_friend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/user"
        android:padding="8dp"
        app:borderRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_status_item_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Phạm Ngọc Duy"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_status_item_friend"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_location_status_item_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Gần Ngõ 16 Phan Văn Trường, Dịch Vọng Hậu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_status_item_friend"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_status_item_friend"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_count_status_item_friend"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="1"
        style="@style/TextView.Badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_ic_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_status_item_friend"
        app:layout_constraintStart_toEndOf="@+id/tv_name_status_item_friend"
        app:layout_constraintTop_toTopOf="@+id/tv_name_status_item_friend"
        app:srcCompat="@drawable/ic_battery_50_black_24dp" />

    <TextView
        android:id="@+id/tv_battery_status_item_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="50%"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_status_item_friend"
        app:layout_constraintStart_toEndOf="@+id/img_ic_battery"
        app:layout_constraintTop_toTopOf="@+id/tv_name_status_item_friend" />

</androidx.constraintlayout.widget.ConstraintLayout>