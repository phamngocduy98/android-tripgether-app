<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cf.bautroixa.maptest.theme.RoundedImageView
        android:id="@+id/img_avatar_item_friend_status_lite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:borderRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/tv_messages_count_item_friend_status_lite"
        style="@style/TextView.Badge"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/img_avatar_item_friend_status_lite"
        app:layout_constraintTop_toTopOf="@+id/img_avatar_item_friend_status_lite" />

</androidx.constraintlayout.widget.ConstraintLayout>