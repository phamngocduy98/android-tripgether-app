<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="2dp">

    <TextView
        android:id="@+id/tv_battery_item_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="11%"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_battery_item_member"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:cpb_background_progressbar_color="@color/colorBackground"
        app:cpb_background_progressbar_width="2dp"
        app:cpb_progress_direction="to_left"
        app:cpb_progressbar_color="@color/colorText"
        app:cpb_progressbar_width="2dp"
        app:cpb_round_border="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>