<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_container_message_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sender_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingStart="64dp"
            android:text="Sender"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linear_main_message_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginEnd="16dp">

            <cf.bautroixa.maptest.theme.RoundedImageView
                android:id="@+id/img_avatar_item_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                app:borderRadius="15dp"
                app:srcCompat="@drawable/avatar_item_room" />

            <TextView
                android:id="@+id/tv_content_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_radius_full_white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Hi, Iam back"
                android:textColor="@color/colorTextSecondary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_time_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="12:12"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>