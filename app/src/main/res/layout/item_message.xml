<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/box_message_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp">

        <cf.bautroixa.masoibot.theme.RoundedImageView
            android:id="@+id/img_message_item_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:borderRadius="15dp"
            app:srcCompat="@drawable/avatar_item_room" />

        <LinearLayout
            android:id="@+id/box_message_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_item_message_incoming"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message_item_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_message_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="a\n\a\na" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>