<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/ic_item_tool"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_tool_button"
        android:paddingVertical="8dp"
        android:tint="@color/icon_tool_button"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_item_tool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_people_white_24dp" />

    <TextView
        android:id="@+id/badge_item_tool"
        style="@style/TextView.Badge"
        android:text="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ic_item_tool"
        app:layout_constraintTop_toTopOf="@+id/ic_item_tool" />

    <TextView
        android:id="@+id/tv_title_item_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_radius_full_white"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="Thành viên nhóm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_item_tool" />

</androidx.constraintlayout.widget.ConstraintLayout>