<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_full_white">

    <TextView
        android:id="@+id/tv_title_widget_share_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-light"
        android:text="Mã chuyến đi"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_trip_code_widget_share_trip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="1234567890123123"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_widget_share_trip" />

    <Button
        android:id="@+id/btn_qr_widget_share_trip"
        style="@style/Button.FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:minWidth="0dp"
        android:text="Quét QR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_code_widget_share_trip"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_send_widget_share_trip"
        style="@style/Button.FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="4dp"
        android:minWidth="0dp"
        android:text="Gửi"
        app:layout_constraintEnd_toStartOf="@+id/btn_qr_widget_share_trip"
        app:layout_constraintTop_toTopOf="@+id/btn_qr_widget_share_trip" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:tint="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_add_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>